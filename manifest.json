{
  "name": "Yandex Lyrics",
  "description": "Shows song's lyrics in Yandex Music.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": ["https://*.yandex.ru/*"],
  "content_scripts": [
      {
        "matches": ["https://music.yandex.ru/*"],
        "js": ["yandex_music.js"],
        "run_at": "document_end"
      }
    ],
  "icons": {
    "16": "/images/16.png",
    "32": "/images/32.png",
    "48": "/images/48.png",
    "128": "/images/128.png"
  }
}


